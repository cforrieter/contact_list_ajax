<div class="container">
  <div class="row">
    <h1>Home Page</h1>
  </div>

  <form method="post" class="form-horizontal">
      <div class="form-group">
          <label class="col-xs-3 control-label">Full name <sup>*</sup></label>
          <div class="col-xs-4">
              <input type="text" class="form-control" name="firstName" id="firstName" placeholder="First name" />
          </div>
          <div class="col-xs-4">
              <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Last name" />
          </div>
      </div>

      <div class="form-group">
          <label class="col-xs-3 control-label">Email <sup>*</sup></label>
          <div class="col-xs-4">
              <input type="email" class="form-control" name="email" id="email" placeholder="example@gmail.com" />
          </div>
      </div>

      <div class="form-group">
          <label class="col-xs-3 control-label">Mobile phone <sup>*</sup></label>
          <div class="col-xs-5">
              <input type="text" class="form-control" name="mobilePhone" id="phoneNumber1" />
          </div>
      </div>
      <div class="form-group">
          <div class="col-xs-9 col-xs-offset-3">
              <button type="submit" class="btn btn-default">Add New Contact</button>
          </div>
      </div>
  </form>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone Number(s)</th>
      </tr>
    </thead>
    <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.id %></td>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone_number %></td>
        <td><button class="edit">Edit</button><button class="delete">Delete</button></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>